layout: nil
---

<?xml version="1.0" encoding="UTF-8"?>
<rss xmlns:itunes="http://www.itunes.com/DTDs/Podcast-1.0.dtd" version="2.0">
<channel>
    <title>{{ site.title }}</title>
    <itunes:author>Chris Chernoff &amp; Brian Williams</itunes:author>
    <link>http://www.redline.fm</link>
    <itunes:subtitle>{{ site.description }}</itunes:subtitle>
    <itunes:summary>Chris Chernoff and Brian Williams offer their thoughts on the teams, drivers, and tech that go into each and every Formula 1 race.</itunes:summary>
    <language>en-us</language>
    <copyright>2014 by Chris Chernoff &amp; Brian Williams</copyright>
    <itunes:owner>
        <itunes:name>Chris Chernoff &amp; Brian Williams</itunes:name>
        <itunes:email>chris@burnedpixel.com</itunes:email>
    </itunes:owner>
    <itunes:image href="{{ site.url }}public/img/logo.png" />
    <itunes:category text="Sports &amp; Recreation">
        <itunes:category text="Sports &amp; Recreation - Professional"/>
    </itunes:category>
    {% for post in site.posts %}
    <item>
        <title>{{ post.title }}</title>
        <itunes:author>Chris Chernoff &amp; Brian Williams</itunes:author>
        <itunes:summary>{{ post.summary }}</itunes:summary>
        <description><![CDATA[{{ post.content | split: '<!-- more -->' | first }}]]></description>
        <enclosure url="{{ post.audio }}" length="{{ post.size }}" type="audio/x-m4a}}" />
        <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
        <itunes:category text="Sports &amp; Recreation">
            <itunes:category text="Sports &amp; Recreation - Professional"/>
        </itunes:category>
        <itunes:duration>01:20:19</itunes:duration>
        <itunes:explicit>no</itunes:explicit>
        <itunes:keywords>F1, Formula 1, Formula One, Racing</itunes:keywords>
    </item>
    {% endfor %}
</channel>
</rss>